<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    package="com.uriallab.haat.haat">

    <uses-permission android:name="android.permission.ACCESS_BACKGROUND_LOCATION" />
    <uses-permission android:name="android.permission.ACCESS_FINE_LOCATION" />
    <uses-permission android:name="android.permission.ACCESS_COARSE_LOCATION" />
    <uses-permission android:name="android.permission.ACCESS_NETWORK_STATE" />
    <uses-permission android:name="android.permission.CAMERA" />
    <uses-permission android:name="android.permission.INTERNET" />
    <uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE" />
    <uses-permission android:name="android.permission.READ_EXTERNAL_STORAGE" />
    <uses-permission android:name="android.permission.RECORD_AUDIO" />
    <uses-permission android:name="android.permission.WAKE_LOCK" />
    <uses-permission android:name="android.permission.DISABLE_KEYGUARD" />
    <uses-permission android:name="android.permission.VIBRATE" />

    <application
        android:name=".Utilities.MyApplication"
        android:allowBackup="true"
        android:hardwareAccelerated="false"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:largeHeap="true"
        android:networkSecurityConfig="@xml/network_security_config"
        android:requestLegacyExternalStorage="true"
        android:roundIcon="@mipmap/ic_launcher"
        android:supportsRtl="true"
        android:theme="@style/AppTheme"
        android:usesCleartextTraffic="true">
        <activity android:name="com.uriallab.haat.CancelOrderActivity"></activity>
        <activity
            android:name=".UI.Activities.ScanCriedtCardActivity"
            android:screenOrientation="portrait"
            android:windowSoftInputMode="stateAlwaysHidden|stateVisible|adjustResize" />
        <activity
            android:name=".UI.Activities.RegisterAsDriver.ThirdStepActivity"
            android:screenOrientation="portrait"
            android:windowSoftInputMode="stateAlwaysHidden|stateVisible|adjustResize" />
        <activity
            android:name=".UI.Activities.RegisterAsDriver.SecondStepActivity"
            android:screenOrientation="portrait"
            android:windowSoftInputMode="stateAlwaysHidden|stateVisible|adjustResize" />
        <activity
            android:name=".UI.Activities.RegisterAsDriver.FirstStepActivity"
            android:screenOrientation="portrait"
            android:windowSoftInputMode="stateAlwaysHidden|stateVisible|adjustResize" />
        <activity
            android:name=".UI.Activities.RegisterAsDriver.TermsAndConditionsActivity"
            android:screenOrientation="portrait"
            android:windowSoftInputMode="stateAlwaysHidden|stateVisible|adjustResize" />
        <activity
            android:name=".UI.Activities.Updates.PhotoViewActivity"
            android:screenOrientation="portrait"
            android:windowSoftInputMode="stateAlwaysHidden|stateVisible|adjustResize" />
        <activity
            android:name=".UI.Activities.ConfirmPaymentActivity"
            android:screenOrientation="portrait"
            android:windowSoftInputMode="stateAlwaysHidden|stateVisible|adjustResize" />
        <activity
            android:name=".UI.Activities.Updates.HatOnlineStoreActivity"
            android:screenOrientation="portrait"
            android:windowSoftInputMode="stateAlwaysHidden|stateVisible|adjustResize" />
        <activity
            android:name=".UI.Activities.Updates.StoresActivity"
            android:screenOrientation="portrait"
            android:windowSoftInputMode="stateAlwaysHidden|stateVisible|adjustResize" />
        <activity
            android:name=".UI.Activities.makeOrder.OtherBranchesActivity"
            android:screenOrientation="portrait"
            android:windowSoftInputMode="stateAlwaysHidden|stateVisible|adjustResize" />
        <activity
            android:name=".UI.Activities.PaymentGateActivity"
            android:launchMode="singleTask"
            android:theme="@style/AppThemePayment"
            android:windowSoftInputMode="adjustPan">
            <intent-filter>
                <data android:scheme="haat" />

                <action android:name="android.intent.action.VIEW" />

                <category android:name="android.intent.category.DEFAULT" />
                <category android:name="android.intent.category.BROWSABLE" />
            </intent-filter>
        </activity>
        <activity
            android:name=".UI.Activities.TrackDriverActivity"
            android:screenOrientation="portrait"
            android:windowSoftInputMode="stateAlwaysHidden|stateVisible|adjustResize" />
        <activity
            android:name=".UI.Activities.ChatDriverActivity"
            android:launchMode="singleTask"
            android:screenOrientation="portrait"
            android:windowSoftInputMode="stateAlwaysHidden|stateVisible|adjustResize" />
        <activity
            android:name=".UI.Activities.DriverNewOrderActivity"
            android:screenOrientation="portrait"
            android:windowSoftInputMode="stateAlwaysHidden|stateVisible|adjustResize" />
        <activity
            android:name=".UI.Activities.AddOfferActivity"
            android:screenOrientation="portrait"
            android:windowSoftInputMode="stateAlwaysHidden|stateVisible|adjustResize" />
        <activity
            android:name=".UI.Activities.CreateInvoiceActivity"
            android:screenOrientation="portrait"
            android:windowSoftInputMode="stateAlwaysHidden|stateVisible|adjustResize" />
        <activity
            android:name=".UI.Activities.SentSuccessfullyActivity"
            android:screenOrientation="portrait"
            android:windowSoftInputMode="stateAlwaysHidden|stateVisible|adjustResize" />
        <activity
            android:name=".UI.Activities.utilsAndAccountInfo.MyAccountDetailsActivity"
            android:screenOrientation="portrait"
            android:windowSoftInputMode="stateAlwaysHidden|stateVisible|adjustResize" />
        <activity
            android:name=".UI.Activities.AddCouponActivity"
            android:screenOrientation="portrait"
            android:windowSoftInputMode="stateAlwaysHidden|stateVisible|adjustResize" />
        <activity
            android:name=".UI.Activities.utilsAndAccountInfo.ContactUsActivity"
            android:screenOrientation="portrait"
            android:windowSoftInputMode="stateAlwaysHidden|stateVisible|adjustResize" />
        <activity
            android:name=".UI.Activities.utilsAndAccountInfo.CommentsActivity"
            android:screenOrientation="portrait"
            android:windowSoftInputMode="stateAlwaysHidden|stateVisible|adjustResize" />
        <activity
            android:name=".UI.Activities.utilsAndAccountInfo.ComplaintDetailsActivity"
            android:screenOrientation="portrait"
            android:windowSoftInputMode="stateAlwaysHidden|stateVisible|adjustResize" />
        <activity
            android:name=".UI.Activities.utilsAndAccountInfo.ComplaintListActivity"
            android:screenOrientation="portrait"
